<%!
    #include <klapp/my_c.h>
    #include <klapp/my_cxx.h>
    #include <string>
    #include <list>

    using namespace std;

    static char buf[64];
%>
<html>
<head> <title>klapp</title> </head>
<body>

<h1>KLone app example</h1>

<blockquote>
    Data coming from the C function:
    <blockquote>
    <i>
    <%
        function_c(buf, sizeof(buf));

        io_printf(out, "%s", buf);
    %>
    </i>
    </blockquote>
</blockquote>

<blockquote>
    Data coming from the C++ function:
    <blockquote>
    <i>
    <%
        function_cxx(buf, sizeof(buf));

        io_printf(out, "%s", buf);
    %>
    </i>
    </blockquote>
</blockquote>

<blockquote>
    Code generated by C++ code:
    <blockquote>
    <i>
    <%
        list<string> ls;
        list<string>::const_iterator it;

        ls.push_back(string("zero"));
        ls.push_back(string("one"));
        ls.push_back(string("two"));

        for(it = ls.begin(); it != ls.end(); ++it)
        {
            /* do something with the string */

            io_printf(out, "%s <br>", it->c_str());
        }
    %>
    </i>
    </blockquote>
</blockquote>

</body>
</html>


